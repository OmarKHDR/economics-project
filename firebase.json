{
  "firestore": {
    "database": "(default)",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/load-management/**",
        "destination": "/load-management/index.html"
      },
      {
        "source": "/smart-home/**",
        "destination": "/smart-home/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
